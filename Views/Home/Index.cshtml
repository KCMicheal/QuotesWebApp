@model IEnumerable<QuotesWebApp.Models.QuotesViewModel>
@{
    ViewData["Title"] = "Home Page";
    Random random = new Random();
    var nextQuote = random.Next(0, Model.Count());
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Shinobi Quotes</h1>

    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-header">
                Quote
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p>@item.Quotes</p>
                    <footer class="blockquote-footer">@item.Author in<cite title="Source Title">Naruto Shippuden</cite></footer>
                </blockquote>
            </div>
        </div>
    }
</div>